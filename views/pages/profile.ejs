                          }

                         /////////////////////////////////////////////////////////
                        var _english = $('#english');
                        _english.prop('checked', currUser.skills.english);
                        var _maths = $('#maths');
                        _maths.prop('checked', currUser.skills.maths);
                        var _comp = $('#comp');
                        _comp.prop('checked', currUser.skills.comp);
                        var _music = $('#music');
                        _music.prop('checked', currUser.skills.music);
                        var _noSkills = $('#noSkills');
                        _noSkills.prop('checked', currUser.skills.noSkills);
                        //_username.html(currUser.username); //cambiamos los valores del html con los que estan en la base de datos
                        $("img#userImage").attr("src", currUser.imgURL);
                        //$("#username").html(currUser.username);
                        // $("#form-contact-firstName").val(currUser.firstName);


                        $("#submitBtn").click(function (event) {
                            event.preventDefault();

                            if (!_name || !_lastname || !_email || !_password) {
                                console.log("EMPYT");
                                $("p#errorSpace").html("Fill up the fields");
                                return;
                            }

                            print("ENVIANDO ", _name, _lastname, _email, _password);

                            return;
                            $.ajax
                                ({
                                    url: '/users',
                                    data: {
                                        email: _email
                                    },
                                    type: 'get',
                                    success: function (data) {
                                        if (data.length > 0) {
                                            $("p#errorSpace").html(`User with email ${_email} Already Exists`);
                                        } else {
                                            $.ajax
                                                ({
                                                    url: '/users',
                                                    data: {
